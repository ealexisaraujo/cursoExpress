  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/joi": "^17.1.1",
    "@sentry/node": "^5.15.5",
    "bcrypt": "^4.0.1",
    "consolidate": "^0.15.1",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.7",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "chalk": "^4.0.0",
    "clean-css-cli": "^4.3.0",
